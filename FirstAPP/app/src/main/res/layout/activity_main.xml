<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/layoutBoddy"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/layoutHead"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorGreen"
        >

        <TextView
            android:id="@+id/textviw"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginLeft="150dp"
            android:text="Ildrus Universe"
            android:gravity="center"
        />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layautMain"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_below="@+id/layoutHead"
        >


        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Introduce your Name" />

        <EditText
            android:id="@+id/editText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="10dp"
            android:inputType="textPersonName"
            android:hint="Name Here" />

        <TextView
            android:textSize="22sp"
            android:textColor="black"
            android:layout_centerInParent="true"
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_marginTop="190dp"
            android:layout_marginLeft="120dp"/>

    </RelativeLayout>




    <RelativeLayout
        android:id="@+id/layautFotter"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/layautMain">

        <Button
            android:id="@+id/button1"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:background="@color/colorGreen"
            android:onClick="acept"
            android:text="ACEPT" />

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="315dp"
            android:background="@color/colorRed"
            android:onClick="cancel"
            android:text="CANCEL" />

    </RelativeLayout>

</RelativeLayout>