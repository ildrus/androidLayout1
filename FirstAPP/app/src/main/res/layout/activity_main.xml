<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/layoutBoddy"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/layoutHead"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorGreen"
        >


        <TextView
            android:id="@+id/textviw"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginLeft="150dp"
            android:text="Ildrus Universe"
            android:gravity="center"
        />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_marginTop="50dp">

        <RelativeLayout
            android:id="@+id/layautMain"
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:layout_below="@+id/layoutHead">


            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Introduce your Name" />

            <EditText
                android:id="@+id/editText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="100dp"
                android:ems="10"
                android:hint="Name Here"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text=""
                android:textSize="22sp" />

            <CheckBox
                android:id="@+id/checkBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="150dp"
                android:layout_marginTop="300dp"
                android:text="CheckBox" />

            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="700dp"
                android:layout_marginLeft="170dp">
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/muko"/>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>



    <LinearLayout
        android:id="@+id/layautFotter"
        android:layout_width="match_parent"
        android:layout_marginTop="550dp"
        android:layout_height="50dp"
        >

        <Button
            android:id="@+id/button1"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:background="@color/colorGreen"
            android:onClick="acept"
            android:text="ACEPT" />

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="205dp"
            android:background="@color/colorRed"
            android:onClick="cancel"
            android:text="CANCEL" />


    </LinearLayout>

</RelativeLayout>